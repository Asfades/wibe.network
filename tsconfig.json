{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@entities/*": ["src/app/entities/*"],
      "@player/*": ["src/app/components/player/*"],
      "@playlist/*": ["src/app/components/playlist/*"],
      "@store/*": ["src/app/store/*"],
      "@services/*": ["src/app/services/*"],
      "@pages/*": ["src/app/pages/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
